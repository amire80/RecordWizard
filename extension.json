{
    "name": "RecordWizard",
    "version": "0.1.0",
    "author": [
        "Antoine Lamielle"
    ],
    "url": "https://www.mediawiki.org/wiki/Extension:RecorderWizard",
    "namemsg": "recordWizard",
    "descriptionmsg": "recordWizard-desc",
    "license-name": "GPL-2.0+",
    "type": "other",
    "manifest_version": 1,
    "MessagesDirs": {
        "RecordWizard": [
            "i18n"
        ]
    },
    "AutoloadClasses": {
        "SpecialRecordWizard": "specials/SpecialRecordWizard.php",
        "RecordWizardHooks": "Hooks.php"
    },
    "ResourceModules": {
        "ext.recordWizard": {
            "scripts": [
                "modules/mw.recordWizard.Record.js",
                "modules/mw.recordWizard.RecordWizard.js"
            ],
			"dependencies": [
			    "ext.recordWizard.base",
			    "ext.recordWizard.styles",
				"ext.recordWizard.controller"
			]
        },
        "ext.recordWizard.base": {
            "scripts": [
                "modules/mw.recordWizard.js"
            ]
        },
        "ext.recordWizard.styles": {
            "styles": [
                "modules/ext.recordWizard.css"
            ]
        },
        "ext.recordWizard.upload":{
            "scripts": [
                "modules/mw.recordWizard.UploadManager.js"
            ],
			"dependencies": [
			    "mediawiki.api.upload",
			    "ext.recordWizard.base"
			]
        },
        "ext.recordWizard.recorder": {
            "scripts": [
                "modules/mw.recordWizard.libs.js",
                "lib/lingua-recorder/AudioRecord.js",
                "lib/lingua-recorder/LinguaRecorder.js",
                "lib/lingua-recorder/Studio.js",
                "lib/lingua-recorder/WordListStudio.js"
            ]
        },
        "ext.recordWizard.ui": {
            "scripts": [
                "modules/ui/mw.recordWizard.ui.js",
                "modules/ui/mw.recordWizard.ui.Step.js",
                "modules/ui/mw.recordWizard.ui.Tutorial.js",
                "modules/ui/mw.recordWizard.ui.Studio.js"
            ],
			"dependencies": [
			    "oojs"
			]
        },
        "ext.recordWizard.controller": {
            "scripts": [
                "modules/controller/mw.recordWizard.controller.js",
                "modules/controller/mw.recordWizard.controller.Step.js",
                "modules/controller/mw.recordWizard.controller.Tutorial.js",
                "modules/controller/mw.recordWizard.controller.Studio.js"
            ],
			"dependencies": [
			    "mediawiki.confirmCloseWindow",
			    "oojs",
			    "ext.recordWizard.ui"
			]
        }
    },
    "ResourceFileModulePaths": {
        "localBasePath": ".",
        "remoteExtPath": "RecordWizard"
    },
    "SpecialPages": {
        "RecordWizard": "SpecialRecordWizard"
    },
    "ExtensionMessagesFiles": {
        "RecordWizardAlias": "RecordWizard.alias.php"
    },
    "Hooks": {
        "ResourceLoaderTestModules": [
            "RecordWizardHooks::onResourceLoaderTestModules"
        ]
    }
}
