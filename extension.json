{
    "name": "RecordWizard",
    "version": "0.1.0",
    "author": [
        "Antoine Lamielle"
    ],
    "url": "https://www.mediawiki.org/wiki/Extension:RecorderWizard",
    "namemsg": "recordWizard",
    "descriptionmsg": "recordWizard-desc",
    "license-name": "GPL-2.0+",
    "type": "other",
    "manifest_version": 1,
	"config": {
		"wgRecordWizardConfig": {
			"properties": {
				"langCode": "",
				"gender": ""
			},
			"items": {
				"genderMale": "",
				"genderFemale": "",
				"genderOther": ""
			}
		}
	},
	"DefaultUserOptions": {
		"recwiz-locutor": "{}",
		"recwiz-lang": ""
	},
    "MessagesDirs": {
        "RecordWizard": [
            "i18n"
        ]
    },
    "AutoloadClasses": {
        "SpecialRecordWizard": "specials/SpecialRecordWizard.php",
        "RecordWizardHooks": "Hooks.php"
    },
    "ResourceModules": {
        "ext.recordWizard": {
            "scripts": [
                "modules/mw.recordWizard.Record.js",
                "modules/mw.recordWizard.RecordWizard.js"
            ],
			"dependencies": [
				"oojs-ui",
				"mediawiki.util",
			    "ext.recordWizard.base",
			    "ext.recordWizard.styles",
			    "ext.recordWizard.upload",
				"ext.recordWizard.controller"
			]
        },
        "ext.recordWizard.base": {
            "scripts": [
                "modules/mw.recordWizard.js"
            ]
        },
        "ext.recordWizard.styles": {
            "styles": [
                "modules/ext.recordWizard.css"
            ]
        },
        "ext.recordWizard.upload":{
            "scripts": [
                "modules/mw.recordWizard.RequestQueue.js"
            ],
			"dependencies": [
			    "mediawiki.api",
			    "mediawiki.api.upload",
			    "ext.recordWizard.base"
			]
        },
        "ext.recordWizard.recorder": {
            "scripts": [
                "modules/mw.recordWizard.libs.js",
                "lib/lingua-recorder/AudioRecord.js",
                "lib/lingua-recorder/LinguaRecorder.js",
                "lib/lingua-recorder/Studio.js",
                "lib/lingua-recorder/WordListStudio.js"
            ]
        },
        "ext.recordWizard.generator":{
            "scripts": [
                "modules/generator/mw.recordWizard.generator.js",
                "modules/generator/mw.recordWizard.generator.Generator.js",
                "modules/generator/mw.recordWizard.generator.Nearby.js"
            ],
			"dependencies": [
			    "oojs-ui",
			    "mediawiki.ForeignApi"
			],
			"messages": [
                "mwe-recwiz-generator-manual",
                "mwe-recwiz-generator-nearby",
			    "mwe-recwiz-nearby-coordinates",
			    "mwe-recwiz-nearby-coordinates-help",
			    "mwe-recwiz-nearby-limit",
			    "mwe-recwiz-nearby-limit-help",
			    "mwe-recwiz-nearby-latitude",
			    "mwe-recwiz-nearby-longitude",
			    "mwe-recwiz-nearby-getcoordinates",
			    "mwe-recwiz-nearby-source",
			    "mwe-recwiz-error-cantgetposition",
			    "mwe-recwiz-warning-noresults"
			]
        },
        "ext.recordWizard.layout":{
            "scripts": [
                "modules/layout/mw.recordWizard.layout.js",
                "modules/layout/mw.recordWizard.layout.DropdownLayout.js",
                "modules/layout/mw.recordWizard.layout.AccordionLayout.js",
                "modules/layout/mw.recordWizard.layout.WordSelectorWidget.js"
            ],
			"dependencies": [
			    "oojs-ui"
			]
        },
        "ext.recordWizard.ui": {
            "scripts": [
                "modules/ui/mw.recordWizard.ui.js",
                "modules/ui/mw.recordWizard.ui.Step.js",
                "modules/ui/mw.recordWizard.ui.Tutorial.js",
                "modules/ui/mw.recordWizard.ui.Details.js",
                "modules/ui/mw.recordWizard.ui.License.js",
                "modules/ui/mw.recordWizard.ui.Studio.js",
                "modules/ui/mw.recordWizard.ui.Publish.js",
                "modules/ui/substeps/mw.recordWizard.ui.DetailsLocutor.js",
                "modules/ui/substeps/mw.recordWizard.ui.DetailsParam.js",
                "modules/ui/substeps/mw.recordWizard.ui.DetailsGenerator.js"
            ],
			"dependencies": [
			    "oojs-ui",
			    "ext.recordWizard.layout"
			],
			"messages": [
				"ooui-item-remove",
		        "mwe-recwiz-step-tutorial",
                "mwe-recwiz-step-details",
                "mwe-recwiz-step-license",
                "mwe-recwiz-step-studio",
                "mwe-recwiz-step-publish",
                "mwe-recwiz-upload-count",
                "mwe-recwiz-next",
                "mwe-recwiz-previous",
                "mwe-recwiz-continue",
                "mwe-recwiz-continueanyway",
                "mwe-recwiz-retry",
                "mwe-recwiz-locutor",
                "mwe-recwiz-locutor-gender",
                "mwe-recwiz-gender-male",
                "mwe-recwiz-gender-female",
                "mwe-recwiz-gender-other",
                "mwe-recwiz-locutor-languages",
                "mwe-recwiz-locutor-location",
                "mwe-recwiz-param",
                "mwe-recwiz-param-lang",
                "mwe-recwiz-generator",
                "mwe-recwiz-generator-wordlist",
                "mwe-recwiz-generator-addwords",
                "mwe-recwiz-generator-noword",
                "mwe-recwiz-generator-wordcount",
                "mwe-recwiz-pendinguplads",
                "mwe-recwiz-allsucceeded",
                "mwe-recwiz-somefailed",
                "mwe-recwiz-allfailed",
                "mwe-recwiz-warning-wordsleft",
                "mwe-recwiz-warning-pendinguploads",
                "mwe-recwiz-warning-faileduploads"
			]
        },
        "ext.recordWizard.controller": {
            "scripts": [
                "modules/controller/mw.recordWizard.controller.js",
                "modules/controller/mw.recordWizard.controller.Step.js",
                "modules/controller/mw.recordWizard.controller.Tutorial.js",
                "modules/controller/mw.recordWizard.controller.Details.js",
                "modules/controller/mw.recordWizard.controller.License.js",
                "modules/controller/mw.recordWizard.controller.Studio.js",
                "modules/controller/mw.recordWizard.controller.Publish.js"
            ],
			"dependencies": [
			    "mediawiki.confirmCloseWindow",
			    "oojs",
			    "ext.recordWizard.recorder",
			    "ext.recordWizard.generator",
			    "ext.recordWizard.ui"
			]
        }
    },
    "ResourceFileModulePaths": {
        "localBasePath": ".",
        "remoteExtPath": "RecordWizard"
    },
    "SpecialPages": {
        "RecordWizard": "SpecialRecordWizard"
    },
    "ExtensionMessagesFiles": {
        "RecordWizardAlias": "RecordWizard.alias.php"
    },
    "Hooks": {
        "ResourceLoaderTestModules": [
            "RecordWizardHooks::onResourceLoaderTestModules"
        ],
        "GetPreferences": [
            "RecordWizardHooks::onGetPreferences"
        ]
    }
}
